{$DOMAIN_NAME}, www.{$DOMAIN_NAME} {
	root * /var/www/wordpress
	php_fastcgi wordpress:9000
	file_server
	encode gzip

	handle {$PMA_ABSOLUTE_URI} {
		redir {$PMA_ABSOLUTE_URI}/ 308
	}

	handle_path {$PMA_ABSOLUTE_URI}* {
		reverse_proxy phpmyadmin:80
	}

	tls {
		dns cloudflare {env.CF_API_TOKEN}
		resolvers 1.1.1.1
	}

	log {
		output stdout
		format console
	}
}
